# CEP Proprietary Machine Environment Configuration

# Anthropic API (only paid component - ~$10/month)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: OpenAI API (if using OpenAI instead of Anthropic)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Firecrawl API (free tier available)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Database
DATABASE_PATH=./data/cep_machine.db

# Ollama (local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Playwright
PLAYWRIGHT_HEADLESS=true

# Logging
LOG_LEVEL=INFO
