# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-256-bits-minimum
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-256-bits-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
ENCRYPTION_KEY=your-encryption-key-32-chars-minimum

# Monitoring & Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=cep_grafana_admin_2024
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_URL=http://elasticsearch:9200
KIBANA_ENABLED=true
KIBANA_PORT=5601

# Tool Execution Configuration
TOOL_TIMEOUT_SECONDS=300
MAX_CONCURRENT_TOOLS=10
TOOL_EXECUTION_QUEUE_SIZE=100

# Agent Configuration
AGENT_TIMEOUT_SECONDS=600
MAX_CONCURRENT_AGENTS=5
AGENT_MEMORY_LIMIT_MB=512

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=20
API_RATE_LIMIT_REQUESTS_PER_SECOND=10
API_RATE_LIMIT_BURST_SIZE=30

# File Storage
UPLOAD_MAX_FILE_SIZE_MB=10
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx,txt,csv,json
STORAGE_PATH=/app/data
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Email Configuration (for outreach)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@yourdomain.com

# External API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
FIRECRAWL_API_KEY=your-firecrawl-api-key

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_ENABLED=true

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65
CLIENT_BODY_TIMEOUT=60
CLIENT_HEADER_TIMEOUT=60

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=14
LOG_LEVEL_INFO=INFO
LOG_LEVEL_ERROR=ERROR
LOG_LEVEL_DEBUG=DEBUG

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_MULTI_TENANT=false
ENABLE_BILLING=false
ENABLE_API_DOCS=true

# Development Overrides (set to false in production)
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_SWAGGER_UI=false
ENABLE_PROFILING=false
ENABLE_TEST_MODE=false
